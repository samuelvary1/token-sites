{
  "name": "token-sites",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "start": "turbo run dev"
  },
  "dependencies": {
    "next": "15.4.5",
    "postcss": "^8.5.6",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "eslint": "^9.33.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "overrides": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "next": "15.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
  "**/*.{js,ts,jsx,tsx}": [
    "eslint --fix",
    "prettier --write"
  ],
  "**/*.{json,css,md}": [
    "prettier --write"
  ]
},
"scripts": {
  "prepare": "husky install",
  "lint": "eslint . --ext js,ts,jsx,tsx",
  "format": "prettier --write ."
},
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
